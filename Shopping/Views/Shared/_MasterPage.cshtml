<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/ajax.jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/maxcdn.bootstrap-3.37.min.js"></script>
    @*<link href="~/Scripts/maxcdn.bootstrap-3.3.7.min.css" rel="stylesheet" />*@

    <title>Home</title>

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Convienient Shopping", "Index", "productCrud", null, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="glyphicon glyphicon-user"></i>&nbsp; Welcome &nbsp; @Session["EmpUsername"]<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#"><i class="glyphicon glyphicon-user">&nbsp</i> Profile</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("logout","log")"><i class=" glyphicon glyphicon-off"></i> Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
     </div>

    <div class="container-fluid body-content" style="margin:0px; padding:0px">
        <div class="col col-md-2 ">
                <ul class="nav list-group" style="margin-top:20px">
                    <li>
                        <a href="@Url.Action("Index", "Home")" ><i class="glyphicon glyphicon-home">&nbsp;</i>Home</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "productCrud")"><i class="glyphicon glyphicon-resize-vertical">&nbsp;</i>Products</a>
                    </li>
                    <li>
                        <a href="#"><i class="glyphicon glyphicon-shopping-cart">&nbsp;</i>Orders</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","customerCrud")"><i class="glyphicon glyphicon-user">&nbsp;</i>Customer</a>
                    </li>
                    <li>
                        <a href="#"><i class="glyphicon glyphicon-user">&nbsp;</i>Staff</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","offer")"><i class="glyphicon glyphicon-briefcase">&nbsp;</i>Offers</a>
                    </li>
                    <li>
                        <a href="#"><i class="glyphicon glyphicon-phone-alt">&nbsp;</i>Contact Us</a>
                    </li>
                </ul>
        </div>
        <div class="col col-md-10" style="margin-top:10px">
            <div class="container">
                
                    @RenderBody()
               
            </div>
            <div class="container">
                <div class="row">
                    <hr />
                    <footer>
                        <p style="color:gray">&copy; @DateTime.Now.Year - Convenient Shopping</p>
                    </footer>
                </div>
            </div>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
